<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_marginBottom="55dp"
    android:layout_marginTop="5dp"
    android:scrollbarStyle="outsideInset"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Picture -->

            <!-- Username -->
            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:contentDescription="Profile Picture"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_background"
                android:src="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:text="Fruiteasy"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- User ID -->
            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:text="ID: 1204210134"
                android:textColor="#777777"
                android:textSize="14sp" />

            <!-- User Email -->
            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="fruiteasy1@gmail.com"
                android:textColor="#777777"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="230dp"
            >

            <!-- Account Section Header -->
            <TextView
                android:id="@+id/account_section_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCOUNT"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#777777"
                android:layout_marginBottom="8dp" />

            <!-- My Profile Item -->
            <LinearLayout
                android:id="@+id/myProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/radius_background"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_circleaccount_24"
                    android:contentDescription="My Profile Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Profile"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_chevronright_24"
                    android:contentDescription="Arrow Icon" />
            </LinearLayout>

            <!-- Change Password Item -->
            <LinearLayout
                android:id="@+id/changePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/radius_background"
                android:layout_marginBottom="26dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_resetlock_24"
                    android:contentDescription="Change Password Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_chevronright_24"
                    android:contentDescription="Arrow Icon" />
            </LinearLayout>

            <!-- Content Section Header -->
            <TextView
                android:id="@+id/content_section_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTENT"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#777777"
                android:layout_marginBottom="8dp" />

            <!-- History Scanning Item -->
            <LinearLayout
                android:id="@+id/historyScanning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/radius_background"
                android:layout_marginBottom="26dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_save_24"
                    android:contentDescription="History Scanning Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History Scanning"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_chevronright_24"
                    android:contentDescription="Arrow Icon" />
            </LinearLayout>

            <!-- Support Section Header -->
            <TextView
                android:id="@+id/support_section_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUPPORT"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#777777"
                android:layout_marginBottom="8dp" />

            <!-- Report Bug Item -->
            <LinearLayout
                android:id="@+id/reportBug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/radius_background"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_flagreport_24"
                    android:contentDescription="Report Bug Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report Bug"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_chevronright_24"
                    android:contentDescription="Arrow Icon" />
            </LinearLayout>

            <!-- Contact Us Item -->
            <LinearLayout
                android:id="@+id/contactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/radius_background"
                android:layout_marginBottom="26dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_mail_24"
                    android:contentDescription="Contact Us Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_chevronright_24"
                    android:contentDescription="Arrow Icon" />
            </LinearLayout>

            <!-- Action Section Header -->
            <TextView
                android:id="@+id/action_section_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTION"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#777777"
                android:layout_marginBottom="8dp" />

            <!-- Log Out Item -->
            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/radius_background"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_logout_24"
                    android:contentDescription="Log Out Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>